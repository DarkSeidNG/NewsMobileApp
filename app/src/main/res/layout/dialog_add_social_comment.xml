<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <RelativeLayout
        android:id="@+id/addTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#fff"
        android:clickable="true">

        <TextView
            android:id="@+id/viewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Social Comment"
            android:textSize="@dimen/header_text_large"
            android:textColor="#000"
            app:font="@{`roboto-black`}"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/task_title_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewTitle"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What is on your mind?"
                android:textSize="@dimen/normal_text_medium"
                android:minLines="5"
                android:minHeight="100dp"
                android:textColorHint="#409466"
                android:inputType="textCapSentences"
                app:font="@{`roboto-medium`}"/>

        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1b5406"
            android:text="CANCEL"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_alignTop="@+id/save"
            android:layout_toLeftOf="@+id/save"
            android:layout_toStartOf="@+id/save"
            app:font="@{`roboto-medium`}"/>

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1b5406"
            android:text="SAVE"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_below="@+id/task_title_cont"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:font="@{`roboto-medium`}"/>



    </RelativeLayout>
</layout>
